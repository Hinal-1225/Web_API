@model red.Models.TBLUser
@{
    ViewBag.Title = "Login";

}

@if (ViewData["errorMessage"] != null)
{
    <script>
                    alert('@ViewData["errorMessage"]');
    </script>
}



<h2>Login</h2>
@using (Html.BeginForm("DoLogin", "Home", FormMethod.Post))
{
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 mt-2">



            <label>UserName :</label>
            @Html.TextBoxFor(a => a.UserName, new { Class = "form-control" })
        </div>
        <div class="col-4"></div>
        <div class="col-4"></div>
        <div class="col-4 mt-2">
            <label>password :</label>
            @Html.TextBoxFor(a => a.Password, new { Class = "form-control" })
        </div>
        <div class="col-4"></div>
        <div class="col-4"></div>
        <div class="col-4 mt-2 ">
            <input type="submit" value="login" class="btn btn-secondary" />
        </div>
        <div class="col-4"></div>



    </div>}
